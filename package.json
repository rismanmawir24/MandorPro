{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "mandorpro",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "web:clear": "expo start --web --clear",
    "web:export": "expo export --platform web -o dist",
    "web:serve": "npm run web:export && npx serve dist",
    "logo:gen": "node scripts/generate-logo.cjs",
    "prod:local": "node -e \"console.log('Use: .\\\\scripts\\\\run-prod-local.ps1 (Windows) or ./scripts/run-prod-local.sh (Unix)')\"",
    "prod:build": "expo export --platform web --output-dir dist",
    "prod:serve": "expo start --no-dev --minify",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "imports:dry": "node scripts/convert-imports-to-alias.cjs --dry app src",
    "imports:write": "node scripts/convert-imports-to-alias.cjs --write app src",
    "eas:build:android": "eas build -p android --profile production",
    "eas:submit:android": "eas submit -p android --profile production",
    "android:prebuild": "expo prebuild -p android",
    "android:bundle": "cd android && .\\gradlew bundleRelease",
    "android:apk": "cd android && .\\gradlew assembleRelease"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run typecheck"
    }
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.16",
    "dayjs": "^1.11.18",
    "expo": "~54.0.10",
    "expo-asset": "^12.0.9",
    "expo-auth-session": "^7.0.8",
    "expo-camera": "^17.0.8",
    "expo-constants": "~18.0.9",
    "expo-file-system": "~19.0.15",
    "expo-font": "~14.0.8",
    "expo-linking": "~8.0.8",
    "expo-location": "^19.0.7",
    "expo-notifications": "^0.32.11",
    "expo-print": "^15.0.7",
    "expo-router": "~6.0.8",
    "expo-sharing": "^14.0.7",
    "expo-sqlite": "^16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-updates": "~29.0.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-svg": "^15.13.0",
    "react-native-web": "^0.21.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.36.0",
    "eslint-config-expo": "^10.0.0",
    "expo-build-properties": "~1.0.9",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "~5.9.2"
  },
  "private": true
}
